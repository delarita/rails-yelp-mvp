<div class = "container">

<div class = "petit-menu">
  <h3 class = "restaurant"><%= @restaurant.name  %></h3>
</div>
<h4><%= @restaurant.address  %></h4>
<h4><%= @restaurant.category  %> style</h4>
<h5>reviews</h5>
<ol>
<% @restaurant.reviews.each do |review| %>
<li><%= review.content %>:<%= review.rating %></li>
<% end %>
</ol>

<h4><%= link_to "Add a review", new_restaurant_review_path(@restaurant)%>
<h4><%= link_to "back", restaurants_path %></h4>
</div>
